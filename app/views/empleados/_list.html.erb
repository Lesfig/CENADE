
<table class= "table table-condensed">
  <thead>
    <tr>
      <th>Empleado</th>
      <th>C.I</th>
      <th>Direccion</th>
      <th class="col-md-1">Telefono</th>
      <th>Cargo</th>
      <th>Area</th>
      <th></th>
    </tr>
  </thead>
  <% if @empleados.blank? %>
    <tfoot>
      <tr>
        <th colspan="8" scope="col">No se encontraron coincidencias </th>
      </tr>
    </tfoot>
   <% end %>
  <tbody>    
    <% @empleados.each do |empleado| %>
    <tr data-url=<%= empleado_path(empleado)%>>
      <td class="show-empleado"><%=empleado.abr_profesion %>  <%=empleado.persona.nombre %> <%=empleado.persona.apellido %></td>
      <td class="show-empleado"><%=empleado.persona.ci %></td>
      <td class="show-empleado crop"><%=empleado.persona.direccion %></td>
      <td class="show-empleado"><%=empleado.persona.telefono %></td>
      <td class="show-empleado"><%=empleado.cargo %></td>
      <td class="show-empleado">
          <% if not empleado.type == 'Funcionario' %>         
            <%=empleado.area.nombre %>
          <% end %>  
      </td> 

      <td class = "action">
        
        <%= link_to '<i class="fa fa-eye fa-lg"></i> '.html_safe, empleado_path(empleado), remote: true%>     
         
        <%= link_to '<i class="fa fa-edit fa-lg"></i> '.html_safe, edit_empleado_path(empleado), remote: true%>
        
        <% unless current_user.empleado_id == empleado.id %>           
          <%= link_to '<i class="fa fa-trash-o fa-lg"></i>'.html_safe, empleado_path(empleado), method: 'delete', data: {confirm: "Â¿Desea eliminar al empleado #{empleado.persona.nombre}?"}%>
        <%end%>       
      </td>
    </tr>
    <% end %>   
  </tbody>
</table>