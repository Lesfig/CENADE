$('#modal-lg').modal('hide');
$('.paciente_select').html("<%= escape_javascript(options_for_select(Paciente.all.collect{ |p| [p.persona.nombre, p.id] }, selected: @paciente.id).insert(0, 'Seleccione un paciente')) %>");
$('.paciente_select').select2('destroy');
