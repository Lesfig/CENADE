  data: [{ id: "<%=j @paciente.id.to_s %>", text: "<%=j @paciente.persona.nombre %>" }]
});
$('.paciente_select').val("<%=j @paciente.id.to_s %>").trigger("change");
$('.paciente_data').html("<%= j render partial: 'turnos/paciente_form'%>");