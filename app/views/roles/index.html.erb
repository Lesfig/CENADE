<div class= "content">

  <div class="page-title">
    <div class= "row">
      <div class="col-md-3">
          Permisos por Roles
      </div>
      
        <%= render 'layouts/messages'%>
      
      <div class="tool">
       <%= search_form_for @search, class: 'buscador', remote: true do |f| %>
          <div class="input-group"> 
            <%= f.search_field :name_cont, placeholder: " Buscar por Rol", class: "form-control", autofocus: true%>
            <span class="fa fa-search"> 

            </span>
          <div class="input-group-btn"> 
            <%= link_to '<i class="fa fa-plus-square"></i> '.html_safe, new_role_path%> 
            <%= link_to '<i class="fa fa-print"></i> '.html_safe%>          
          </div> 
        </div>
      <% end %>
    </div>
  </div>
</div>
  
  <div id="list">
    <%= render 'list' %>
  </div>  
  <div id="list-paginate">
    <%= paginate @roles, remote: true %>
  </div>  
</div>