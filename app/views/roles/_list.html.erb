    <% if !flash.notice.blank? %> 
      var n = noty({text: '<%=notice%>', type: 'success'});   
    <% end %>
    
    <% if !flash.alert.blank?%> 
      var n = noty({text: '<%=alert%>', type: 'error'});
    <% end %>
