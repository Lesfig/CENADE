
<table class= "table table-condensed">
  <thead>
    <tr>
      <th>Fecha de Consulta</th>
      <th>Paciente</th>
      <th>√Årea</th>
      <th>Profesional</th>
      <th></th>
    </tr>
  </thead>
  <% if @consultas.blank? %>
    <tfoot>
      <tr>
        <th colspan="8" scope="col">No se encontraron coincidencias </th>
      </tr>
    </tfoot>
   <% end %>
  <tbody>
    <% @consultas.each do |consulta| %>
    <tr>
      <td><%=consulta.fecha.strftime("%d/%m/%Y")%></td>
      <td ><%=consulta.paciente.persona.nombre %> <%=consulta.paciente.persona.apellido%></td>
      <td ><%=consulta.area.nombre %></td>
        <%doctor= Empleado.find(consulta.rofesional_salud_id)%>
      <td ><%=doctor.persona.nombre %> <%=doctor.persona.apellido %></td>
   
      <td class = "action">
        
        <%= link_to '<i class="fa fa-eye fa-lg" data-toggle="tooltip" data-placement="bottom" title="Ver Consulta"></i> '.html_safe, consulta_path(consulta), remote: true%>     
        <%= link_to '<i class="fa fa-edit fa-lg" data-toggle="tooltip" data-placement="bottom" title="Editar Consulta"></i> '.html_safe, edit_consulta_path(conulta), remote: true%>        

      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript"> 
       
      consultasUI.initScript();
      <% if !flash.notice.blank? %> 
        var n = noty({text: '<%=notice%>', type: 'success'});   
      <% end %>
      <% if !flash.alert.blank?%> 
        var n = noty({text: '<%=alert%>', type: 'error'});
      <% end %>

</script>