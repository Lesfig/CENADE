<div class= "content">
  <div class="page-title">    
    Consultas

    <div class="tool">
      <%= search_form_for @search, class: 'buscador', remote: true do |f| %>
      <div class="input-group"> 
       
       <span class="fa fa-search"></span>
        <div class="input-group-btn"> 
          <a href="#"><i class="fa fa-search-plus" aria-hidden="true" id= "show" data-toggle="tooltip" data-placement="bottom" title="Filtrar"></i></a>
          <%= link_to '<i class="fa fa-plus-square" aria-hidden="true" id= "show" data-toggle="tooltip" data-placement="bottom" title="Nueva Consulta"></i> '.html_safe, new_consulta_path, remote: true %>    
      </div> 
    </div>
  <% end %>
  </div>

  </div>
  <div class= "content2">

    <div id="advanced-search" class="to-hide">
      <div class="row" >
       <%= search_form_for @search, url: search_consultas_path, method: :post, remote: true, class: 'form-filtros' do |f| %>
       <div class="row">
       
        <%= FormBuilder::text_field_v(f, :fecha_gteq, {col_class: 'col-md-2', label_text: 'Desde', input_class: 'date',placeholder: "Fecha",max_length: Domain::FECHA})%>
        <%= FormBuilder::text_field_v(f, :fecha_gteq, {col_class: 'col-md-2', label_text: 'Hasta', input_class: 'date',placeholder: "Fecha",max_length: Domain::FECHA})%>
        

        <div class= "input-group pull-right" style = 'margin-top: 25px;'>
         <%= f.submit 'Filtrar', class: 'btn btn-custom '%>
         <%= f.submit 'Limpiar Campos', type: 'reset', class: 'btn btn-link'%>
      </div>
   </div>
   <% end %>
  </div>
  </br></br>
  </div>
  <div id="list" class="">
     <%= render 'list' %>
  </div> 

  <div id="list-paginate">
   <%= paginate @consultas, remote: true %>
  </div>  
</div>
</div>

<script type="text/javascript"> 
 $(".to-hide").hide();

 $(document).ready(function(){
  var show=true;
  $("#show").click(function(){
   if(show){
      $("#advanced-search").show();
      show=false;
   }else{
      $("#advanced-search").hide();
      show=true;
   }

   
});
});

</script>
