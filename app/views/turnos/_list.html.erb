<div class="row well" >
      <%= search_form_for @search, url: search_turnos_path, method: :post, remote: true, class: 'form-filtros' do |f| %>
         <div class="row">
          <%= FormBuilder::text_field_v(f, :paciente_persona_nombre_or_paciente_persona_apellido_cont, {col_class: 'col-md-3', label_text: 'Paciente', input_class: '',max_length: Domain::NOMBRE})%>
          
          <%= FormBuilder::text_field_v(f, :estado_cont, {col_class: 'col-md-2', label_text: 'Estado Turno', input_class: '',max_length: Domain::NOMBRE})%>
          <%= FormBuilder::text_field_v(f, :area_nombre_cont, {col_class: 'col-md-3', label_text: 'Área', input_class: '',max_length: Domain::AREA})%>
          <%= FormBuilder::text_field_v(f, :fecha_consulta_eq, {col_class: 'col-md-2', label_text: 'Fecha consulta', input_class: '',max_length: Domain::FECHA})%>
        
         <div class= "input-group pull-right" style = 'margin-top: 25px;'>
          <%= f.submit 'Filtrar', class: 'btn btn-custom '%>
          <%= f.submit 'Limpiar Filtros', type: 'reset', class: 'btn btn-link'%>
         </div>
         </div>
      <% end %>
  </div>
</br>
<table id="table-turnos" class= "table table-condensed">
  <thead>
    <tr class="active">
      <th>Fecha</th>
      <th>Turno</th>
      <th>Paciente</th>
      <th>C.I.</th>
      <th>Profesional</th>
      <th>Estado</th>
      <th>Área</th>
      <th></th>
    </tr>
  </thead>
  <% if @turnos.blank? %>
    <tfoot>
      <tr>
        <th colspan="8" scope="col">No se encontraron coincidencias </th>
      </tr>
    </tfoot>
   <% end %>
  <tbody>
    <% @turnos.each do |turno| %>
    <tr>
      <td ><%=turno.fecha_expedicion.to_date%></td>
      <td ><%=turno.turno %></td>
      <td ><%=turno.paciente.persona.nombre %> <%=turno.paciente.persona.apellido%></td>
      <td ><%=turno.paciente.persona.ci %></td>
        <%doctor= Empleado.find(turno.doctor_id)%>
      <td ><%=doctor.persona.nombre %> <%=doctor.persona.apellido %></td>
      <td ><span class="label label-success"><%=turno.estado %></span></td>
      <td><%=turno.area.nombre%></td>

      
      <td class = "action">
        
        <%= link_to '<i class="fa fa-eye fa-lg"></i> '.html_safe, turno_path(turno), remote: true%>     
        <%= link_to '<i class="fa fa-edit fa-lg"></i> '.html_safe, edit_turno_path(turno), remote: true%>        
        <%= link_to '<i class="fa fa-times fa-lg"></i>'.html_safe, turno_path(turno), method: 'delete', remote: true, data: {confirm: "¿Desea cancelar el turno?"}%>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript"> 
       
      turnosUI.initScript();

</script>