<div class= "content">
  <div class="page-title page-title-ficha">  
   Fichas de Fonoaudiolog√≠a    
   <div class="tool">
      <%= search_form_for @search, class: 'buscador', remote: true do |f| %>
         <div class="input-group"> 
            <%= f.search_field :paciente_persona_nombre_cont, placeholder: "Nombre,Apellido o C.I del Paciente", class: "form-control", autofocus: true%>
            <span class="fa fa-search"></span>
          	<div class="input-group-btn"> 
              <a href="#"><i class="fa fa-search-plus" aria-hidden="true" id= "show" data-toggle="tooltip" data-placement="bottom" title="Filtrar"></i></a>
              <%= link_to '<i class="fa fa-plus-square"></i> '.html_safe%>          
              <%= link_to '<i class="fa fa-print"></i> '.html_safe %>   
          </div> 
        </div>
      <% end %>
    </div>
  </div>
  <div id="list">
    <%= render 'list' %>
  </div>
  <div id="list-paginate">
      <%= paginate @fonoaudiologicas, remote: true %>
  </div>
</div> 

<script type="text/javascript"> 
  $(document).ready(function(){
      $("#show").click(function(){
          $("#advanced-search").show();
      });
  });
</script>
