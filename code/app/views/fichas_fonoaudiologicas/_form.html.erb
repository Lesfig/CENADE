<div class="page-title page-title-con-sidebar">
  <%=ficha.id.nil? ? 'Nueva Ficha' : 'Editar Ficha'%>

  <div class="tool tool-sin-buscador">
    <%= link_to '<i class="fa fa-list" data-toggle="tooltip" title="Lista de Fichas"></i> '.html_safe, fichas_fonoaudiologicas_path %>
  </div>

</div>
<div class="content">
<div class="form-content">

	<%= simple_form_for ficha, html: {class: 'form-ficha'} do |f|%>
	<%= hidden_field_tag :ficha_id, ficha.id, class: 'ficha-id'%>

	<h4 class="titulo-ficha">FICHA FONOAUDIOLOGIA</h4>
	<div class="row">

		<%= f.input :paciente_id, collection: paciente.id.nil? ? [] : [[paciente.persona_full_name,paciente.id]], label: '* Paciente', wrapper_html: { class: paciente.id.nil? ? 'col-xs-4' : 'col-xs-5'},input_html:  { class: 'required select-paciente select2 uniquePacienteFicha paciente-id',disabled: paciente.id.nil? ? false : true} %>

		<% if paciente.id.nil? %>
			<%= link_to '<i class="fa fa-plus"></i> '.html_safe, pacientes_new_modal_path(root: 'fichas_fonoaudiologicas', encargado: true), class: 'btn btn-custom btn-add col-xs-1', remote: true %>
		<% end %>

		<%= f.input :doctor_id, collection: doctores.collect { |a| [a.abr_profesion+" "+a.persona_full_name, a.id] }, label: '* Profesional de la Salud', wrapper_html: { class: 'col-xs-4' }, input_html:	 { class: 'required select-doctor select2'} %>

		<%= f.input :fecha, as: :string, label: '* Fecha', wrapper_html: { class: 'col-xs-3'}, input_html: { class: 'date datepicker required dateLessSystemDate', maxLength: Domain::FECHA, value:Formatter.format_date(ficha.fecha)} %>
	</div>
	<div id="paciente-data">
		<%= render 'form_paciente', paciente: paciente %>
	</div>

	<h4>Datos de la Ficha</h4>
	<hr>

	<div class="row">
		<%= f.input :escolaridad, label: 'Grado que cursa', wrapper_html: { class: 'col-xs-6'}, input_html: { maxLength: Domain::ESCOLARIDAD} %>
		<%= f.input :escuela, label: 'Escuela', wrapper_html: { class: 'col-xs-6'}, input_html: { maxLength: Domain::ESCUELA} %>
	</div>

    <div class="form-button">
  		<%= f.submit 'Guardar', class: 'btn btn-custom',data: {disable_with: "Guardando..."}%>
	</div>

	<%end%>
</div>
</div>
<script type="text/javascript">
	fichasUI.initScript();

	pacientesUI.checkPacienteHasFicha("<%=fichas_fonoaudiologicas_check_paciente_has_ficha_path%>");

  pacientesUI.getPaciente({element: '.select-paciente', root: 'fichas_fonoaudiologicas'});

	<% if !flash.notice.blank? %>
	var n = noty({text: '<%=notice%>', type: 'success'});
	<% end %>

	<% if !flash.alert.blank?%>
	var n = noty({text: '<%=alert%>', type: 'error'});
	<% end %>

</script>