<div class="page-title page-title-con-sidebar">
	Ficha de <%= @ficha.paciente_persona_full_name%>

	<div class="tool">
		<%= link_to '<i class="fa fa-list data-toggle="tooltip" title="Lista de Fichas"></i> '.html_safe, fichas_fonoaudiologicas_path %>

		<%= link_to '<i class="fa fa-plus-square" data-toggle="tooltip" title="Nueva Ficha"></i> '.html_safe, new_ficha_fonoaudiologica_path, remote: true %>

		<%= link_to '<i class="fa fa-edit" data-toggle="tooltip" title="Editar Ficha"></i> '.html_safe, edit_ficha_fonoaudiologica_path(@ficha), remote:true%>

		<%= link_to '<i class="fa fa-print" data-toggle="tooltip" title="Imprimir Ficha"></i> '.html_safe, fichas_fonoaudiologicas_print_ficha_path(ficha_id: @ficha.id, :format => :pdf), target: '_blank'%>

	</div>

</div>

<div class="form-content2">

	<%= simple_form_for @ficha, html: {class: 'form-ficha2'}, remote: true do |ficha|%>


	<h4 class="titulo-ficha">FICHA FONOAUDIOLOGIA </h4>

	<div class="row">

		<h4 class="col-md-9"><strong>Profesional de la Salud: </strong> <%= @ficha.doctor.abr_profesion+' '+@ficha.doctor.persona_full_name%> </h4>

  		<h4 class="col-md-3"><strong> Fecha: </strong> <%= Formatter.format_date(@ficha.fecha)%> </h4>
  	</div>

	<div id="paciente-data">
		<%= render 'form_paciente' %>
	</div>

		<h4>Datos de la Ficha</h4>
		<hr>

		<div class="row">
			<%= ficha.input :escolaridad, label: 'Grado que cursa', wrapper_html: { class: 'col-md-6'}, input_html: { disabled: true}  %>
			<%= ficha.input :escuela, label: 'Escuela', wrapper_html: { class: 'col-md-6'}, input_html: { disabled: true}  %>
		</div>

    <%end%>
</div>
<script type="text/javascript">
  fonoaudiologicasUI.initScript();

  <% if !flash.notice.blank? %>
    var n = noty({text: '<%=notice%>', type: 'success'});
  <% end %>

  <% if !flash.alert.blank?%>
    var n = noty({text: '<%=alert%>', type: 'error'});
  <% end %>

</script>