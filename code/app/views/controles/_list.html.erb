
<table class= "table table-condensed">
  <thead>
    <tr>
      <th>Fecha de Control</th>

      <th>Profesional</th>
      <th></th>
    </tr>
  </thead>
  <% if controles.blank? %>
    <tfoot>
      <tr>
        <th colspan="8" scope="col">No se encontraron coincidencias </th>
      </tr>
    </tfoot>
   <% end %>
  <tbody>
    <% controles.each do |control| %>
    <tr>
      <td><%=control.fecha.strftime("%d/%m/%Y")%></td>

      <td ><%=control.doctor.persona_full_name %></td>

      <td class = "action">

        <%= link_to '<i class="fa fa-eye fa-lg" data-toggle="tooltip" data-placement="bottom" title="Ver Control"></i> '.html_safe, control_path(control), remote: true%>
        <%= link_to '<i class="fa fa-edit fa-lg" data-toggle="tooltip" data-placement="bottom" title="Editar Control"></i> '.html_safe, edit_control_path(control), remote: true%>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">

      <% if !flash.notice.blank? %>
        var n = noty({text: '<%=notice%>', type: 'success'});
      <% end %>
      <% if !flash.alert.blank?%>
        var n = noty({text: '<%=alert%>', type: 'error'});
      <% end %>

</script>