         <%= consulta.doctor_abr_profesion%>
         <%= consulta.doctor_persona_full_name%>
         <label class="pull-right"><%= date(consulta.fecha)%></label>
      </div>
      <div class="panel-body">
         <%= data_text('Motivo de Consulta', consulta.motivo_consulta,'col-md-12') %>

         <%= data_text('EvaluaciÃ³n', consulta.evaluacion,'col-md-6') %>
