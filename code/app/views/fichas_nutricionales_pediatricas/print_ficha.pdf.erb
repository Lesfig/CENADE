<h4 class="ficha-title">FICHA NUTRICIONAL PEDIÁTRICA</h4>

<h4>Datos Personales</h4>
<hr>

<div class="row">
	<div class="form-group col-xs-8">
		<label class="control-label">Nombre y Apellido:</label>
		<div class="data"> <%=@nutri_pediatrica.paciente_persona_full_name%> </div>
	</div>

	<div class="form-group col-xs-3">
		<label class="control-label">Fecha de nac.:</label>
		<div class="data"> <%=Formatter.format_date(@nutri_pediatrica.paciente_persona_fecha_nacimiento)%> </div>
	</div>

	<div class="form-group col-xs-1">
		<label class="control-label">Edad:</label>
		<div class="data"> <%=@nutri_pediatrica.paciente_persona_edad%> </div>
	</div>
</div>
<div class="row">

	<div class="form-group col-xs-3">
		<label class="control-label">Tel.:</label>
		<div class="data"> <%=@nutri_pediatrica.paciente_persona_telefono%> </div>
	</div>

	<div class="form-group col-xs-9">
		<label class="control-label">Dirección:</label>
		<div class="data"> <%=@nutri_pediatrica.paciente_persona_direccion%> </div>
	</div>
</div>
</br>
<h4>I- Antecedentes Prenatal</h4>
<hr>
<div class="row">
	<div class="form-group col-xs-12">
		<label class="control-label"><%=@titulos_largos.first.titulo%></label>
		<div class="data-bordered"> <%=@nutri_pediatrica.problema_embarazo%> </div>
	</div>
</div>

<div class="row">
	<div class="form-group col-xs-12">
		<label class="control-label"><%=@titulos_largos.find(2).titulo%></label>
