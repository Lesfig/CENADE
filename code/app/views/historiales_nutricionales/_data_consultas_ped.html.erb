<% if consultas_ped.blank? %>
   <%= panel_head("#{num} - CONSULTAS PEDIÁTRICAS (No tiene)") %>
<% else %>
   <%= panel_begin("#{num} - CONSULTAS PEDIÁTRICAS") %>
   <% i = consultas_ped.size %>

   <% consultas_ped.each do |consulta| %>
      <%= panel_begin("#{consulta.doctor_full_name} <div class='pull-right'>Consulta Nº #{i} - #{date(consulta.fecha)}</div>")%>

         <h4>I - Encargado</h4>
         <hr>
         <div class="row">
            <%= h_data('Encargado', consulta.encargado,'col-xs-12') %>
         </div>

         <h4>II - Valoración del Desarrollo</h4>
         <hr>
         <div class="row">
            <%= h_data('Sostén Cefálico', consulta.sosten_cefalico,'col-xs-12') %>
         </div>
         <div class="row">
            <%= h_data('Se sentó a los', consulta.sento,'col-xs-4') %>
            <%= h_data('Se paró a los', consulta.paro,'col-xs-4') %>
            <%= h_data('Caminó a los', consulta.camino,'col-xs-4') %>
         </div>
         <div class="row">
            <%= h_data('¿Busca Sonido?', consulta.busca_sonido,'col-xs-4') %>
            <%= h_data('¿Emite Sonido?', consulta.emite_sonido,'col-xs-4') %>
            <%= h_data('¿Rie - Llora?', consulta.rie_llora,'col-xs-4') %>
         </div>
         <div class="row">
            <%= h_data('¿Sigue la luz u objetos coloridos?', consulta.sigue_luz,'col-xs-5') %>
            <%= h_data('¿Mastica - Deglute?', consulta.mastica_deglute,'col-xs-7') %>
         </div>
         <div class="row">
            <%= h_data('Habilidades presentes y/o ausentes para la edad', consulta.habilidades,'col-xs-12') %>
         </div>
         <div class="row">
            <%= h_data_text('Otros', consulta.otros,'col-xs-12') %>
         </div>

         <h4>III - Alimentación Actual</h4>
         <hr>
         <div class="row">
            <%= h_data('Desayuno', consulta.desayuno,'col-xs-12') %>
         </div>
         <div class="row">
            <%= h_data('Media Mañana', consulta.media_manana,'col-xs-12') %>
         </div>
         <div class="row">
            <%= h_data('Almuerzo', consulta.almuerzo,'col-xs-12') %>
         </div>
         <div class="row">
            <%= h_data('Merienda', consulta.merienda,'col-xs-12') %>
         </div>
         <div class="row">
            <%= h_data('Cena', consulta.cena,'col-xs-12') %>
         </div>

         <h4>IV - Signos y/o Síntomas</h4>
         <hr>
         <div class="row">
            <%= h_data('Diarrea', consulta.diarrea,'col-xs-4') %>
            <%= h_data('Vómitos', consulta.vomitos,'col-xs-4') %>
            <%= h_data('Fiebre', consulta.fiebre,'col-xs-4') %>
         </div>
         <div class="row">
            <%= h_data('Problemas Respiratorios', consulta.problemas_respiratorios,'col-xs-6') %>
            <%= h_data('Distención abdominal', consulta.distension_abdominal,'col-xs-6') %>
         </div>
         <div class="row">
            <%= h_data('Constipación', consulta.constipacion,'col-xs-4') %>
            <%= h_data('Orina', consulta.orina,'col-xs-4') %>
            <%= h_data('Sudor', consulta.sudor,'col-xs-4') %>
         </div>
         <div class="row">
            <%= h_data('Otros', consulta.otros2,'col-xs-12') %>
         </div>
         <h4>V - Datos Antropométricos</h4>
         <hr>
         <div class="row">
            <%= h_data('Talla', consulta.talla,'col-xs-6') %>
            <%= h_data('Peso', consulta.peso,'col-xs-6') %>
         </div>
         <div class="row">
            <%= h_data('PC', consulta.pc,'col-xs-4') %>
            <%= h_data('IMC', consulta.imc,'col-xs-4') %>
            <%= h_data('CM', consulta.cm,'col-xs-4') %>
         </div>

         <h4>VI - Diagnóstico Médico</h4>
         <hr>
          <div class="row">
            <%= h_data_text('Diagnóstico', consulta.diagnostico,'col-xs-12') %>
         </div>
      <%= panel_end %>
      <% i = i - 1 %>
   <% end %>
   <%= panel_end %>
<% end %>