<div class="content">	
	<div class="page-title page-title-sin-submenu">
		Pacientes 

		<div class="tool">
			<%= search_form_for @search, class: 'buscador', remote: true do |f| %>
			<div class="input-group"> 
				<%= f.search_field :persona_cont, placeholder: " Buscar por Nombre, Apellido o CI", class: "form-control", autofocus: true%>
				<span class="fa fa-search"></span>
				<div class="input-group-btn"> 
					<%= link_to '<i class="fa fa-plus-square"></i> '.html_safe, new_paciente_path, remote: true %> 
					<%= link_to '<i class="fa fa-print"></i> '.html_safe, new_paciente_path, remote: true %> 					
				</div> 
			</div>
			<% end %>
		</div>
	</div>	

	<div id="list" class="list-sin-submenu">
		<%= render 'list' %>
	</div>	

	<div id="list-paginate">
		<%= paginate @pacientes, remote: true %>
	</div>
</div>	
