<div class="page-title page-title-sin-submenu page-title-con-sidebar">
		Reporte Estadístico por Año

		<div class="tool">

					<%= link_to '<i class="fa fa-print"></i> '.html_safe, reportes_estadisticos_print_reporte_anuales_path(:format => :pdf), target: '_blank'%>

		</div>
	</div>
<div class="content content-sin-submenu">

	<div id="advanced-search2">
			<%= search_form_for @search, url: search_year_reportes_estadisticos_path, method: :post, remote: true, class: 'form-filtros' do |f| %>
			<div class="row">


				<%= FormBuilder::select_v(f, :area_nombre_cont, Area.all.collect { |a| [a.nombre, a.nombre] }, {col_class: 'col-md-2', label_text: 'Área'}) %>

				<%= FormBuilder::text_field_v(f, :doctor_persona_nombre_or_doctor_persona_apellido_cont, {col_class: 'col-md-3', label_text: 'Prof. de la Salud', input_class: '', placeholder: "Nombre o Apellido"})%>

				<%= FormBuilder::text_field_v(f, :anho_gteq, {col_class: 'col-md-2', label_text: 'Desde', input_class: 'datepickerYear',placeholder: "Año",max_length: Domain::FECHA})%>

            	<%= FormBuilder::text_field_v(f, :anho_lteq, {col_class: 'col-md-2', label_text: 'Hasta', input_class: 'datepickerYear', placeholder: "Año", max_length: Domain::FECHA})%>

				<div class= "advanced-search-buttons">
					<%= f.submit 'Filtrar', class: 'btn btn-custom '%>
					<%= f.submit 'Limpiar Campos', type: 'reset', class: 'btn btn-link'%>
				</div>
			</div>
			<% end %>
	</div>
	<div class="list-content">
		<div id="list">
			<%= render 'list_anho', reportes: @reportes%>
		</div>

		<div id="list-paginate">
			<%= paginate @reportes, remote: true %>
		</div>
	</div>
</div>

<script type="text/javascript">
	<% if !flash.notice.blank? %>
		var n = noty({text: '<%=notice%>', type: 'success'});
	<% end %>
	<% if !flash.alert.blank?%>
		var n = noty({text: '<%=alert%>', type: 'error'});
	<% end %>

</script>
