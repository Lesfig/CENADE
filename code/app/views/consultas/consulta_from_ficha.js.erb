
$("#wrapper").toggleClass("toggled"); // Esconde el sidebar

$("#principal-content").html('<%= j render 'form', consulta: @consulta, paciente: @paciente, from_ficha: true, formats: 'html' %>');

$('.select-paciente').val("<%=j params[:paciente].to_s %>").trigger("change");//Establece como seleccionado un paciente especificado
$('.select-paciente').attr("disabled","true");//Bloquea el select de paciente
$('#consulta_paciente_id').val("<%=j params[:paciente].to_s %>");//Setea un hidden field con el id de paciente

$('.select-area').val("<%=j params[:area].to_s %>").trigger("change");//Establece como seleccionado un area especificada
$('.select-area').attr("disabled","true");//Bloquea el select de area
$('#consulta_area_id').val("<%=j params[:area].to_s %>");//Setea un hidden field con el id del area

