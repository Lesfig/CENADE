<h4 class="ficha-title">Consulta en <%=@consulta.area_nombre%> </h4>

<h4>I- Datos Personales</h4>
<hr>
<div class="row">
	<div class="form-group col-md-8">
		<label class="control-label">Nombre y Apellido:</label>
		<div class="data"> <%=@consulta.paciente_persona_full_name%> </div>
	</div>

	<div class="form-group col-md-3">
		<label class="control-label">Fecha de nac.:</label>
		<div class="data"> <%=Formatter.format_date(@consulta.paciente_persona_fecha_nacimiento)%> </div>
	</div>

	<div class="form-group col-md-1">
		<label class="control-label">Edad:</label>
		<div class="data"> <%=@consulta.paciente_persona_edad%> </div>
	</div>
</div>
<div class="row">

	<div class="form-group col-md-3">
		<label class="control-label">Tel.:</label>
		<div class="data"> <%=@consulta.paciente_persona_telefono%> </div>
	</div>

	<div class="form-group col-md-9">
		<label class="control-label">Dirección:</label>
		<div class="data"> <%=@consulta.paciente_persona_direccion%> </div>
	</div>
</div>
</br>

<h4>II- Datos de la Consulta</h4>
<hr>
<div class="row">
	<div class="form-group col-md-12">
		<label class="control-label">Motivo de Consulta</label>
		<div class="data-bordered"> <%=@consulta.motivo_consulta%> </div>
	</div>
</div>
<div class="row">
	<div class="form-group col-md-12">
		<label class="control-label">Evaluación</label>
		<div class="data-bordered"> <%=@consulta.evaluacion%> </div>
	</div>
</div>
<div class="row">
	<div class="form-group col-md-12">
		<label class="control-label">Tratamiento</label>
		<div class="data-bordered"> <%=@consulta.tratamiento%> </div>
	</div>
</div>
<div class="row">
	<div class="form-group col-md-12">
		<label class="control-label">Observaciones</label>
		<div class="data-bordered"> <%=@consulta.observaciones%> </div>
	</div>
</div>
