<% if consultas.size == 0 %>
    <strong>No se encontraron consultas</strong>
<% end %>

<ul class="nav nav-tabs">
    <% consultas.each do |c| %>
        <li><a href="#tab-<%= c.id%>"><%= c.fecha.strftime("%d/%m/%Y")%></a></li>
    <%end%>
</ul>

<div class="tabscontent">
    <% consultas.each do |consulta| %>
        <div id="tab-<%= consulta.id%>">
            <%= simple_fields_for :consulta do |consult| %>
            	<div class="row">
			      <h4 class="col-md-9"><strong>Profesional de la Salud: </strong> <%= consulta.doctor_abr_profesion+' '+consulta.doctor_persona_full_name%> </h4>

			      <h4 class="col-md-3"><strong> Fecha: </strong> <%= Formatter.format_date(consulta.fecha)%> </h4>
			    </div>

				<div id="paciente-data">
					<%= render 'form_paciente', paciente: paciente%>
				</div></br>

				<h4>II- Datos de la Consulta</h4>
				<hr>
				<div class="row">
					<%= consult.input :motivo_consulta, as: :text, label: 'Motivo de Consulta', wrapper_html: { class: 'col-md-12'},input_html: { disabled: true, value: consulta.motivo_consulta} %>
				</div></br>

				<h4>III- Datos Antropométricos</h4>
				<hr>
				<div class="row">
					<%= consult.input :peso_actual, label: 'Peso Actual:', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.peso_actual} %>
					<%= consult.input :peso_ideal, label: 'Peso ideal:', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.peso_ideal} %>
					<%= consult.input :peso_deseable, label: 'Peso deseable:', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.peso_deseable} %>
				</div>
				<div class="row">
					<%= consult.input :talla, label: 'Talla:', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.talla} %>
					<%= consult.input :biotipo, label: 'Biotipo:', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.biotipo} %>
					<%= consult.input :imc, label: 'I.M.C:', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.imc} %>
				</div>

				<div class="row">
					<%= consult.input :cir_muneca, label: 'Circ. Muñeca:', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.cir_muneca} %>
					<%= consult.input :circ_brazo, label: 'Circ. Brazo:', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.circ_brazo} %>
					<%= consult.input :circ_cintura, label: 'Circ. Cintura/Cadera:', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.circ_cintura} %>
				</div> </br>

				<h4>IV- Anamnesis Alimentaria</h4>
				<hr>
				<div class="row">
					<%= consult.input :medicamentos, label: 'Toma medicamentos?', wrapper_html: { class: 'col-md-5'},input_html: {disabled: true, value: consulta.medicamentos} %>
					<%= consult.input :suplementos, label: 'Toma suplementos vitaminicos/minerales?:', wrapper_html: { class: 'col-md-7'},input_html: { disabled: true, value: consulta.suplementos} %>
				</div>
				<div class="row">
					<%= consult.input :apetito, label: 'Su apetito es:', wrapper_html: { class: 'col-md-3'},input_html: {disabled: true, value: consulta.apetito} %>
					<%= consult.input :factores_apetito, label: 'Factores que afectan el apetito:', wrapper_html: { class: 'col-md-9'},input_html: { disabled: true, value: consulta.factores_apetito} %>
				</div>
				<div class="row">
					<%= consult.input :alergia_intolerancia, label: 'Tiene alergia o intolerancia a algún alimento?', wrapper_html: { class: 'col-md-12'},input_html: { disabled: true, value: consulta.alergia_intolerancia} %>
				</div>
				<div class="row">
					<%= consult.input :estado_bucal, as: :text, label: 'Estado bucal (dientes, lengua, paladar)', wrapper_html: { class: 'col-md-12'},input_html: {:rows => 2, disabled: true, value: consulta.estado_bucal} %>
				</div>
				<div class="row">
					<%= consult.input :orina_bien, label: 'Orina bien ?', wrapper_html: { class: 'col-md-3'},input_html: { disabled: true, value: consulta.orina_bien} %>
					<%= consult.input :ir_cuerpo, label: 'Va bien de cuerpo ?', wrapper_html: { class: 'col-md-9'},input_html: { disabled: true, value: consulta.ir_cuerpo} %>
				</div>
				<div class="row">
					<%= consult.input :actividades_fisicas, label: 'Realiza actividades físicas?', as: :boolean, checked_value: true, unchecked_value: false %>
				</div>
				<div class="hidden_actividades">
					<div class="row">
						<%= consult.input :tipo, label: 'Tipos', wrapper_html: { class: 'col-md-5'},input_html: {disabled: true, value: consulta.tipo} %>
						<%= consult.input :hs_act_fisicas, label: 'Horas', wrapper_html: { class: 'col-md-3'},input_html: {disabled: true, value: consulta.hs_act_fisicas} %>
						<%= consult.input :frecuencia, label: 'Frecuencias', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.frecuencia} %>
					</div>
				</div>
				<div class="row">
					<%= consult.input :actividad_laboral, label: 'Actividad Laboral:', wrapper_html: { class: 'col-md-9'},input_html: {disabled: true, value: consulta.actividad_laboral} %>
					<%= consult.input :horas_laborales, label: 'Horas', wrapper_html: { class: 'col-md-3'},input_html: {disabled: true, value: consulta.horas_laborales} %>
				</div>
				<div class="row">
					<%= consult.input :vive_con, label: 'Vive con su familia?', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.vive_con} %>
					<%= consult.input :quien_prepara, label: 'Quién prepara los alimentos?', wrapper_html: { class: 'col-md-8'},input_html: {disabled: true, value: consulta.quien_prepara} %>
				</div>
				<div class="row">
					<%= consult.input :que_elementos, label: 'Qué elementos cuenta para cocinar?', wrapper_html: { class: 'col-md-12'},input_html: {disabled: true, value: consulta.que_elementos} %>
				</div>
				<div class="row">
					<%= consult.input :toma_agua, label: 'Cuántos litros de agua bebe?', wrapper_html: { class: 'col-md-12'},input_html: {disabled: true, value: consulta.toma_agua} %>
				</div>
				<div class="row">
					<%= consult.input :mastica_deglute, label: 'Matica - Deglute', wrapper_html: { class: 'col-md-4'},input_html: { disabled: true, value: consulta.mastica_deglute} %>
					<%= consult.input :dificultad_beber, label: 'Dificultad para beber o absorber?', wrapper_html: { class: 'col-md-8'},input_html: {disabled: true, value: consulta.dificultad_beber} %>
				</div>
				<div class="row">
					<%= consult.input :hora_acuesta, label: 'A qué hora se acuesta?', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.hora_acuesta} %>
					<%= consult.input :hora_levanta, label: 'A qué hora se levanta?', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.hora_acuesta} %>
					<%= consult.input :duerme_bien, label: ' Duerme bien?', wrapper_html: { class: 'col-md-4'},input_html: {disabled: true, value: consulta.duerme_bien} %>
				</div>
				<div class="row">
					<%= consult.input :habilidades, label: 'Habilidades presentes o ausentes:', wrapper_html: { class: 'col-md-12'},input_html: { disabled: true, value: consulta.habilidades} %>
				</div>
				<div class="row">
					<%= consult.input :tratamientos_cenade, label: 'Tratamientos que realiza dentro del CENADE con otros especialistas:', wrapper_html: { class: 'col-md-12'},input_html: { disabled: true, value: consulta.tratamientos_cenade} %>
				</div></br>

				<h4>V- Recuento de 24 horas. </h4>
				<hr>

				<div class="panel panel-default">
				  <div class="panel-heading"> Recuento Detallado</div>
				  	<div class="panel-body">
				  		<h4 align= "center">Desayuno</h4>
						<hr>
				  		<div class="row">
							<%= consult.input :alim_desayuno, as: :text, label: 'Alimentos Consumido', wrapper_html: { class: 'col-md-10'},input_html: {disabled: true, :rows => 2, value: consulta.alim_desayuno} %>
							<%= consult.input :cant_desayuno, as: :text, label: 'Cantidad', wrapper_html: { class: 'col-md-2'},input_html: {:rows => 2,  disabled: true, value: consulta.cant_desayuno} %>

						</div>
						<div class="row">
							<%= consult.input :modo_desayuno, as: :text, label: 'Modo de prepación', wrapper_html: { class: 'col-md-7'},input_html: {disabled: true, :rows => 2, value: consulta.modo_desayuno} %>
							<%= consult.input :lugar_desayuno, as: :text, label: 'Lugar de consumo', wrapper_html: { class: 'col-md-5'},input_html: {:rows => 2,  disabled: true, value: consulta.lugar_desayuno} %>

						</div></br>
						<h4 align= "center">Media Mañana</h4>
						<hr>
						<div class="row">
							<%= consult.input :alim_media, as: :text, label: 'Alimentos Consumido', wrapper_html: { class: 'col-md-10'},input_html: {disabled: true, :rows => 2, value: consulta.alim_media} %>
							<%= consult.input :cant_media, as: :text, label: 'Cantidad', wrapper_html: { class: 'col-md-2'},input_html: {:rows => 2,  disabled: true, value: consulta.cant_media} %>

						</div>
						<div class="row">
							<%= consult.input :modo_media, as: :text, label: 'Modo de prepación', wrapper_html: { class: 'col-md-7'},input_html: {disabled: true, :rows => 2, value: consulta.modo_media} %>
							<%= consult.input :lugar_media, as: :text, label: 'Lugar de consumo', wrapper_html: { class: 'col-md-5'},input_html: {:rows => 2,  disabled: true, value: consulta.lugar_media} %>

						</div></br>
						<h4 align= "center">Almuerzo</h4>
						<hr>
						<div class="row">
							<%= consult.input :alim_almuerzo, as: :text, label: 'Alimentos Consumido', wrapper_html: { class: 'col-md-10'},input_html: {disabled: true, :rows => 2, value: consulta.alim_almuerzo} %>
							<%= consult.input :cant_almuerzo, as: :text, label: 'Cantidad', wrapper_html: { class: 'col-md-2'},input_html: {:rows => 2,  disabled: true, value: consulta.cant_almuerzo} %>

						</div>
						<div class="row">
							<%= consult.input :modo_almuerzo, as: :text, label: 'Modo de prepación', wrapper_html: { class: 'col-md-7'},input_html: {disabled: true, :rows => 2, value: consulta.modo_almuerzo} %>
							<%= consult.input :lugar_almuerzo, as: :text, label: 'Lugar de consumo', wrapper_html: { class: 'col-md-5'},input_html: {:rows => 2,  disabled: true, value: consulta.lugar_almuerzo} %>

						</div></br>
						<h4 align= "center">Merienda</h4>
						<hr>
						<div class="row">
							<%= consult.input :alim_merienda, as: :text, label: 'Alimentos Consumido', wrapper_html: { class: 'col-md-10'},input_html: {disabled: true, :rows => 2, value: consulta.alim_merienda} %>
							<%= consult.input :cant_merienda, as: :text, label: 'Cantidad', wrapper_html: { class: 'col-md-2'},input_html: {:rows => 2,  disabled: true, value: consulta.cant_merienda} %>

						</div>
						<div class="row">
							<%= consult.input :modo_merienda, as: :text, label: 'Modo de prepación', wrapper_html: { class: 'col-md-7'},input_html: {disabled: true, :rows => 2, value: consulta.modo_merienda} %>
							<%= consult.input :lugar_merienda, as: :text, label: 'Lugar de consumo', wrapper_html: { class: 'col-md-5'},input_html: {:rows => 2,  disabled: true, value: consulta.lugar_merienda} %>

						</div></br>
						<h4 align= "center">Cena</h4>
						<hr>
						<div class="row">
							<%= consult.input :alim_cena, as: :text, label: 'Alimentos Consumido', wrapper_html: { class: 'col-md-10'},input_html: {disabled: true, :rows => 2, value: consulta.alim_cena} %>
							<%= consult.input :cant_cena, as: :text, label: 'Cantidad', wrapper_html: { class: 'col-md-2'},input_html: {:rows => 2,  disabled: true, value: consulta.cant_cena} %>

						</div>
						<div class="row">
							<%= consult.input :modo_cena, as: :text, label: 'Modo de prepación', wrapper_html: { class: 'col-md-7'},input_html: {disabled: true, :rows => 2, value: consulta.modo_cena} %>
							<%= consult.input :lugar_cena, as: :text, label: 'Lugar de consumo', wrapper_html: { class: 'col-md-5'},input_html: {:rows => 2,  disabled: true, value: consulta.lugar_cena} %>

						</div>
	 				</div>
				</div></br>

				<div class="row">
					<%= consult.input :dx, as: :text, label: 'VI- Diagnóstico Médico', wrapper_html: { class: 'col-md-12'},input_html: { disabled: true, :rows => 2, value: consulta.dx} %>
				</div></br>
				<div class="row">
					<%= consult.input :evaluacion, as: :text, label: 'VII- Evaluación Nutricional', wrapper_html: { class: 'col-md-12'},input_html: { disabled: true, :rows => 2, value: consulta.evaluacion} %>
				</div></br>

				<div class="row">
					<%= consult.input :indicaciones, as: :text, label: 'VIII- Indicaciones', wrapper_html: { class: 'col-md-12'},input_html: {disabled: true, :rows => 3, value: consulta.indicaciones} %>
				</div>

            <%end%>
        </div>
    <%end%>
</div>
