
<table class= "table table-condensed">
  <thead>
    <tr>
      <th>Nro Ficha</th>
      <th>Fecha</th>
      <th>Paciente</th>
      <th>Prof. de la Salud</th>
      <th></th>
      
    </tr>
  </thead>
  <tbody>
    <% @fisio_ninos.each do |f| %>
    <tr>
      <td ><%=f.nro_ficha %></td>
      <td ><%=f.fecha %></td>
      <td ><%=f.paciente.persona.nombre %> <%=f.paciente.persona.nombre %></td>
      <td ><%=f.doctor.persona.nombre %> <%=f.doctor.persona.nombre %></td>      
      <td class = "action">
        
        <%= link_to '<i class="fa fa-eye fa-lg"></i> '.html_safe, ficha_fisioterapia_nino_path(f)%>     
        <%= link_to '<i class="fa fa-edit fa-lg"></i> '.html_safe, edit_ficha_fisioterapia_nino_path(f)%>        
        <%= link_to '<i class="fa fa-plus-square-o  fa-lg"></i>'.html_safe%>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>
