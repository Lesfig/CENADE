<% if consultas.size == 0 %>
    <strong>No se encontraron consultas</strong>
<% end %>

<ul class="nav nav-tabs">
    <% consultas.each do |c| %>
        <li><a href="#tab-<%= c.id%>"><%= c.fecha.strftime("%d/%m/%Y")%></a></li>
    <%end%>
</ul>
<div class="tabscontent">
    <% consultas.each do |consulta| %>
        <div id="tab-<%= consulta.id%>">
            <%= simple_fields_for :consulta do |consult| %>
                <div class="row">
                  <h4 class="col-xs-8"><strong>Profesional de la Salud: </strong> <%= consulta.doctor_abr_profesion+' '+consulta.doctor_persona_full_name%> </h4>

                  <h4 class="col-xs-4"><strong> Fecha de Consulta: </strong> <%= Formatter.format_date(consulta.fecha)%> </h4>
                </div>

              <h4>Datos de Consulta</h4>
              <hr>
              <div class="row">
                <%= consult.input :motivo_consulta, as: :text, label: 'Motivo de Consulta', wrapper_html: { class: 'col-xs-12'}, input_html: { disabled: true, value: consulta.motivo_consulta}, required: false%>
              </div>

              <div class="row">
                 <%= consult.input :observaciones, as: :text, label: 'Observaciones', wrapper_html: { class: 'col-xs-12'}, input_html: { disabled: true, value: consulta.observaciones}, required: false %>
              </div>

              <div class="row">
                <%= consult.input :servicio_cenade, as: :text, label: 'Servicio que utiliza en el CENADE', wrapper_html: { class: 'col-xs-6'}, input_html: { disabled: true, value: consulta.servicio_cenade}, required: false %>

                <%= consult.input :medicacion_actual, as: :text, label: 'Medicacion Actual', wrapper_html: { class: 'col-xs-6'}, input_html: { disabled: true, value: consulta.medicacion_actual}, required: false %>
              </div>
              <h5>Es alérgico o ha reaccionado de manera adversa a:?</h5>
              <div class="row">
                <%= consult.input :anestesico, as: :string, label: 'Anestésico local', wrapper_html: { class: 'col-xs-4'}, input_html: {disabled: true, value: consulta.anestesico}, required: false %>

                <%= consult.input :penicilina, as: :string, label:'Penicilina', wrapper_html: { class: 'col-xs-4'}, input_html: { disabled: true, value: consulta.penicilina}, required: false %>

                 <%= consult.input :otros_medicamentos, as: :string, label:'Otros medicamentos', wrapper_html: { class: 'col-xs-4'}, input_html: { disabled: true, value: consulta.otros_medicamentos}, required: false %>
              </div>
              <div class ="row">
                  <%= consult.input :hemorragias, label: titulos_largos.find(7).titulo, wrapper_html: { class: 'col-xs-6'}, input_html: { disabled: true, value: consulta.hemorragias} , required: false%>

                  <%= consult.input :enfermedad_cardiovascular, label: titulos_largos.find(9).titulo, wrapper_html: { class: 'col-xs-6'}, input_html: { disabled: true, value: consulta.enfermedad_cardiovascular}, required: false %>
              </div>
              <h5>Presenta algunas de éstas enfermedades?</h5>
              <div class ="row">
                <%=consult.input :diabetes, as: :boolean, wrapper_html: { class: 'col-xs-2'},input_html:{disabled: true, checked: consulta.diabetes=='1' ? 'checked' : 'unchecked'}%>
                <%=consult.input :tuberculosis, as: :boolean, wrapper_html: { class: 'col-xs-3'}, input_html:{disabled: true, checked: consulta.tuberculosis=='1' ? 'checked' : 'unchecked'}%>
                <%=consult.input :hepatitis, as: :boolean, wrapper_html: { class: 'col-xs-3'}, input_html:{ disabled: true, checked: consulta.hepatitis=='1' ? 'checked' : 'unchecked'}%>
                <%=consult.input :artritis, as: :boolean,wrapper_html: { class: 'col-xs-2'}, input_html:{ disabled: true, checked: consulta.artritis=='1' ? 'checked' : 'unchecked' }%>
                <%=consult.input :fumador, as: :boolean,wrapper_html: { class: 'col-xs-2'}, input_html:{ disabled: true, checked: consulta.fumador=='1' ? 'checked' : 'unchecked'}%>

              </div><br>
              <div class="row">

                <%=consult.input :enfermedades_sanguineas, as: :boolean,label:'Enfermedades sanguíneas', wrapper_html: { class: 'col-xs-3'}, input_html:{ disabled: true, checked: consulta.enfermedades_sanguineas=='1' ? 'checked' : 'unchecked' }%>
                <%=consult.input :enfermedades_neurologicas, as: :boolean,label:'Enfermedades neurológicas', wrapper_html: { class: 'col-xs-3'}, input_html:{ disabled: true, checked: consulta.enfermedades_neurologicas=='1' ? 'checked' : 'unchecked' }%>
                <%=consult.input :enfermedades_renales, as: :boolean,label: 'Enfermedades Renales',wrapper_html: { class: 'col-xs-3'}, input_html:{ disabled: true, checked: consulta.enfermedades_renales=='1' ? 'checked' : 'unchecked'}%>
                <%=consult.input :enfermedades_venereas, as: :boolean,label:'Enfermedades venéreas',wrapper_html: { class: 'col-xs-3'}, input_html:{disabled: true, checked: consulta.enfermedades_venereas=='1' ? 'checked' : 'unchecked'}%>

              </div>
              <div class ="row">
                  <%= consult.input :problema_tratamiento, label: titulos_largos.find(8).titulo, wrapper_html: { class: 'col-xs-12'}, input_html: { disabled: true, value: consulta.problema_tratamiento}, required: false %>
              </div>

              <div class ="row">
                <%= consult.input :menstruacion, as: :string, label:'Paciente femenino: menstruación:', wrapper_html: { class: 'col-xs-12'}, input_html: { disabled: true, value: consulta.menstruacion}, required: false %>
              </div>
              <div class ="row">
                <%= consult.input :embarazada, as: :string, label:'Está Embarazada?', wrapper_html: { class: 'col-xs-12'}, input_html: { disabled: true, value: consulta.embarazada}, required: false %>
              </div>
              <div class="row">
                <%= consult.input :tiene_hijos, as: :string, label: 'Tiene hijos?', wrapper_html: { class: 'col-xs-4'}, input_html: { disabled: true, value: consulta.tiene_hijos}, required: false %>

                <%= consult.input :cantidad_hijos, as: :string, label:'cuantos:', wrapper_html: { class: 'col-xs-4'}, input_html: { disabled: true, value: consulta.cantidad_hijos}, required: false %>

                 <%= consult.input :amamanta, as: :string, label:'amamanta?', wrapper_html: { class: 'col-xs-4'}, input_html: { disabled: true, value: consulta.amamanta}, required: false %>
              </div>
              <div class ="row">
                <%= consult.input :hospitalizado, as: :string, label: titulos_largos.find(10).titulo, wrapper_html: { class: 'col-xs-4'}, input_html: { disabled: true, value: consulta.hospitalizado} , required: false%>

                <%= consult.input :causa_hospitalizado, as: :string, label:'Causa', wrapper_html: { class: 'col-xs-8'}, input_html: { disabled: true, value: consulta.causa_hospitalizado}, required: false %>
              </div>

              <h4>Exámenes Complementarios</h4><hr>

              <div class="row">
                <%= consult.input :ecg, label: 'ECG', wrapper_html: { class: 'col-xs-12'},input_html: { disabled: true, value: consulta.ecg} , required: false%>
              </div>
              <div class="row">
                <%= consult.input :tac, label: 'TAC', wrapper_html: { class: 'col-xs-12'},input_html: { disabled: true, value: consulta.tac}, required: false %>
              </div>
              <div class="row">
                <%= consult.input :rx, label: 'RX', wrapper_html: { class: 'col-xs-12'},input_html: { disabled: true, value: consulta.rx} , required: false%>
              </div>
              <div class="row">
                <%= consult.input :laboratorios, label: 'Laboratorios', wrapper_html: { class: 'col-xs-12'},input_html: { disabled: true, value: consulta.laboratorios}, required: false %>
              </div>
              <div class="row">
                <%= consult.input :otros_examenes, label: 'Otros Exámenes', wrapper_html: { class: 'col-xs-12'},input_html: {disabled: true, value: consulta.otros_examenes}, required: false %>
              </div>
              <div class="row">
                <%= consult.input :tratamiento,as: :text ,label: 'Tratamiento', wrapper_html: { class: 'col-xs-12'},input_html: { disabled: true, rows: "4", value: consulta.tratamiento} , required: false%>
              </div>
      <%end%>
    </div>
    <%end%>
</div>