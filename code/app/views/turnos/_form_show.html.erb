<div class="page-title page-title-sin-submenu">
    Turno N° <%= @turno.turno%>

    <div class="tool">
      <%= link_to '<i class="fa fa-list"></i> '.html_safe, turnos_path %>
      <%= link_to '<i class="fa fa-plus-square"></i> '.html_safe, new_turno_path, remote: true%>

      <%= link_to '<i class="fa fa-edit"></i> '.html_safe, edit_turno_path(@turno.id), remote:true%>

      <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, turno_path(@turno), method: 'delete', data: {confirm: "¿Desea eliminar el turno n° #{@turno.turno}?"}%>

      <%= link_to '<i class="fa fa-print"></i> '.html_safe, new_turno_path, target: '_blank'%>
    </div>
</div>
<div class= "content content-sin-submenu content-60">
<div class="form-content2">

    <%= form_for @turno, html: {class: 'nuevo-turno'}, remote: true do |turno|%>

      <h4>Datos Personales</h4>
      <hr>
      <div class="row">
        <%= FormBuilder::text_field_v(turno, :paciente_id,

                                          col_class: 'col-md-7',
                                          disabled: true,
                                          label_text: '* Paciente',
                                          input_value: @turno.paciente_persona_full_name) %>

        <%= FormBuilder::text_field_v(turno, :fecha_expedicion,
                                      input_class: 'date datepicker',
                                      max_length: Domain::FECHA,
                                      label_text: '* Fecha Actual',
                                      disabled: true,
                                      col_class: 'col-md-5',
                                      input_value: Formatter.format_date(@turno.fecha_expedicion))%>

       </div>

          <div class ="paciente_data">
          <div class="row">
            <%= FormBuilder::text_field_v(turno, :paciente_id,

                                          col_class: 'col-md-4',
                                          disabled: true,
                                          label_text: 'Nombres',
                                          input_value: @turno.paciente_persona_nombre) %>

            <%= FormBuilder::text_field_v(turno, :paciente_id,
                                          col_class: 'col-md-5',
                                          disabled: true,
                                          label_text: 'Apellidos',
                                          input_value: @turno.paciente_persona_apellido) %>

            <%= FormBuilder::text_field_v(turno, :paciente_id,

                                          max_length: Domain::CI,
                                          col_class: 'col-md-3',
                                          disabled: true,
                                          label_text: 'CI',
                                          input_value: @turno.paciente_persona_ci) %>
            </div>
            <div class="row">
              <%= FormBuilder::text_field_v(turno, :paciente_id,

                                        max_length: Domain::DIRECCION,
                                        col_class: 'col-md-8',
                                        disabled: true,
                                        label_text: 'Direccion',
                                        input_value: @turno.paciente_persona_direccion) %>
               <%= FormBuilder::text_field_v(turno, :paciente_id,

                                        max_length: Domain::TELEFONO,
                                        col_class: 'col-md-4',
                                        disabled: true,
                                        label_text: 'Telefono',
                                        input_value: @turno.paciente_persona_telefono) %>
          </div>


      </div>
    </br>
     <h4>Datos Turno</h4>
    <hr>

    <div class="row">
      <%= FormBuilder::text_field_v(turno, :area_id,

                                          col_class: 'col-md-4',
                                          disabled: true,
                                          label_text: 'Área',
                                          input_value: @turno.area_nombre) %>

      <%= FormBuilder::text_field_v(turno, :doctor_id,

                                          col_class: 'col-md-4',
                                          disabled: true,
                                          label_text: 'Profesional de la Salud',
                                          input_value: @empleado.persona_full_name) %>

       <%= FormBuilder::text_field_v(turno, :fecha_consulta,
                                      input_class: 'date datepicker2',
                                      max_length: Domain::FECHA,
                                      label_text: '* Fecha de Consulta',
                                      disabled: true,
                                      col_class: 'col-md-4',
                                      input_value: Formatter.format_date(@turno.fecha_consulta))%>
    </div>
  </br>
      <div class="row">
          <%= FormBuilder::text_field_v(turno, :monto,
                                      input_class: 'required costo',
                                      max_length: Domain::COSTO,
                                      label_text: '* Costo del servicio',
                                      disabled: true,
                                      col_class: 'col-md-7')%>

           <div class="col-md-5">

            <%= turno.label :paga, '* Abonará el monto estipulado?' %>

            <div class="row">
              <%= label :paga, "Si", class: "col-md-1"%>
              <%= turno.radio_button :paga, true , :value => true, disabled: true, class: "col-md-3 paga si_paga"%>
              <%= label :paga, "No", class: "col-md-2"%>
              <%= turno.radio_button :paga, false , disabled: true, :value => false, class: "col-md-1 paga no_paga" %>

            </div>
        </div>
      </div>
      <% if @turno.paga  %>
        <div class="row" id="factura">
          <%= FormBuilder::text_field_v(turno, :nro_factura,
                                        input_class: '',
                                        max_length: Domain::NRO_FACTURA,
                                        label_text: '* N° de Factura',
                                        disabled: true,
                                        col_class: 'col-md-7')%>

       </div>
      <%end%>

    <% end %>


   </div>
  </div>

<script type="text/javascript">

  <% if !flash.notice.blank? %>
    var n = noty({text: '<%=notice%>', type: 'success'});
  <% end %>
  <% if !flash.alert.blank?%>
    var n = noty({text: '<%=alert%>', type: 'error'});
  <% end %>
</script>



