<ul class="nav nav-tabs">
	<% if pendiente %>
		<li><a href="#con-ad-new"><span class="fa fa-plus"></span> Nueva Consulta</a></li>
	<% end %>
	<% consultas_ad.each do |c| %>
	<li><a href="#con-adu-<%=c.id%>"><%=date(c.fecha)%></a></li>
	<% end %>
</ul>

<div class="tabs-content">
	<% if pendiente %>
      <div id="con-ad-new">
   	   NUEVA CONSULTA ADULTO
      </div>
   <% end %>
	<% consultas_ad.each do |con| %>
		<div id="con-adu-<%=con.id%>">
			<div class="row">
				<%= data('Profesional de la Salud', con.doctor_full_name,'col-md-9') %>
				<%= data('Fecha', date(con.fecha),'col-md-3') %>
			</div>

			<div class="row">
				<%= data_text('I - Motivo de con', con.motivo_consulta,'col-md-12') %>
			</div>

			<ul class="nav nav-tabs">
				<li><a href="#con-adu-<%=con.id%>-dat-ant">II - Datos Antropométricos</a></li>
				<li><a href="#con-adu-<%=con.id%>-ana-ali">III - Anamnesis Alimentaria</a></li>
				<li><a href="#con-adu-<%=con.id%>-rec">IV - Recuento de 24 horas</a></li>
			</ul>

			<div class="tabs-content">
				<div id="con-adu-<%=con.id%>-dat-ant">
					<div class="row">
						<%= data('Peso actual', con.peso_actual,'col-md-4') %>
						<%= data('Peso ideal', con.peso_ideal,'col-md-4') %>
						<%= data('Peso deseable', con.peso_deseable,'col-md-4') %>
					</div>
					<div class="row">
						<%= data('Talla', con.talla,'col-md-4') %>
						<%= data('Biotipo', con.biotipo,'col-md-4') %>
						<%= data('I.M.C.', con.imc,'col-md-4') %>
					</div>
					<div class="row">
						<%= data('Circ. muñeca', con.cir_muneca,'col-md-4') %>
						<%= data('Circ. brazo', con.circ_brazo,'col-md-4') %>
						<%= data('Circ. cintura/cadera', con.circ_cintura,'col-md-4') %>
					</div>
				</div>

				<div id="con-adu-<%=con.id%>-ana-ali">
					<div class="row">
						<%= data('¿Toma medicamentos?', con.medicamentos,'col-md-5') %>
						<%= data('¿Toma suplementos vitaminicos/minerales?', con.suplementos,'col-md-7') %>
					</div>
					<div class="row">
						<%= data('Su apetito es', con.apetito,'col-md-3') %>
						<%= data('Factores que afectan el apetito', con.factores_apetito,'col-md-9') %>
					</div>
					<div class="row">
						<%= data('¿Tiene alergia o intolerancia a algún alimento?', con.alergia_intolerancia,'col-md-12') %>
					</div>
					<div class="row">
						<%= data('Estado bucal (dientes, lengua, paladar)', con.estado_bucal,'col-md-12') %>
					</div>
					<div class="row">
						<%= data('¿Orina bien?', con.orina_bien,'col-md-6') %>
						<%= data('¿Va bien de cuerpo?', con.ir_cuerpo,'col-md-6') %>
					</div>
					<div class="row">
						<%= data('¿Realiza actividades físicas?', con.actividades_fisicas? ? 'Si' : 'No','col-md-4') %>
					</div>
					<% if con.actividades_fisicas %>
					<div class="row">
						<%= data('Tipos', con.tipo,'col-md-5') %>
						<%= data('Horas', con.hs_act_fisicas,'col-md-3') %>
						<%= data('Frecuencias', con.frecuencia,'col-md-4') %>
					</div>
					<% end %>
					<div class="row">
						<%= data('Actividad Laboral', con.actividad_laboral,'col-md-9') %>
						<%= data('Horas', con.horas_laborales,'col-md-3') %>
					</div>
					<div class="row">
						<%= data('¿Vive con su familia?', con.vive_con,'col-md-4') %>
						<%= data('¿Quién prepara los alimentos?', con.quien_prepara,'col-md-8') %>
					</div>
					<div class="row">
						<%= data('¿Qué elementos cuenta para cocinar?', con.que_elementos,'col-md-12') %>
					</div>
					<div class="row">
						<%= data('¿Cuántos litros de agua bebe?', con.toma_agua,'col-md-12') %>
					</div>
					<div class="row">
						<%= data('Mastica - Deglute', con.mastica_deglute,'col-md-4') %>
						<%= data('¿Dificultad para beber o absorber?', con.dificultad_beber,'col-md-8') %>
					</div>
					<div class="row">
						<%= data('¿A qué hora se acuesta?', con.hora_acuesta,'col-md-4') %>
						<%= data('¿A qué hora se levanta?', con.hora_levanta,'col-md-4') %>
						<%= data('¿Duerme bien?', con.duerme_bien,'col-md-4') %>
					</div>
					<div class="row">
						<%= data('Habilidades presentes o ausentes', con.habilidades,'col-md-12') %>
					</div>
					<div class="row">
						<%= data('Tratamientos que realiza dentro del CENADE con otros especialistas', con.tratamientos_cenade,'col-md-12') %>
					</div>
				</div>

				<div id="con-adu-<%=con.id%>-rec">
					<h4>Desayuno</h4>
					<div class="row">
						<%= data_text('Alimentos consumidos', con.alim_desayuno,'col-md-10') %>
						<%= data_text('Cantidad', con.cant_desayuno,'col-md-2') %>
					</div>
					<div class="row">
						<%= data_text('Modo de preparación', con.modo_desayuno,'col-md-7') %>
						<%= data_text('Lugar de consumo', con.lugar_desayuno,'col-md-5') %>
					</div>
					<h4>Media Mañana</h4>
					<div class="row">
						<%= data_text('Alimentos consumidos', con.alim_media,'col-md-10') %>
						<%= data_text('Cantidad', con.cant_media,'col-md-2') %>
					</div>
					<div class="row">
						<%= data_text('Modo de preparación', con.modo_media,'col-md-7') %>
						<%= data_text('Lugar de consumo', con.lugar_media,'col-md-5') %>
					</div>
					<h4>Almuerzo</h4>
					<div class="row">
						<%= data_text('Alimentos consumidos', con.alim_almuerzo,'col-md-10') %>
						<%= data_text('Cantidad', con.cant_almuerzo,'col-md-2') %>
					</div>
					<div class="row">
						<%= data_text('Modo de preparación', con.modo_almuerzo,'col-md-7') %>
						<%= data_text('Lugar de consumo', con.lugar_almuerzo,'col-md-5') %>
					</div>
					<h4>Merienda</h4>
					<div class="row">
						<%= data_text('Alimentos consumidos', con.alim_merienda,'col-md-10') %>
						<%= data_text('Cantidad', con.cant_merienda,'col-md-2') %>
					</div>
					<div class="row">
						<%= data_text('Modo de preparación', con.modo_merienda,'col-md-7') %>
						<%= data_text('Lugar de consumo', con.lugar_merienda,'col-md-5') %>
					</div>
					<h4>Cena</h4>
					<div class="row">
						<%= data_text('Alimentos consumidos', con.alim_cena,'col-md-10') %>
						<%= data_text('Cantidad', con.cant_cena,'col-md-2') %>
					</div>
					<div class="row">
						<%= data_text('Modo de preparación', con.modo_cena,'col-md-7') %>
						<%= data_text('Lugar de consumo', con.lugar_cena,'col-md-5') %>
					</div>
				</div>
			</div>

			<br>
			<div class="row">
				<%= data_text('V - Diagnóstico Médico', con.dx,'col-md-12') %>
			</div>
			<div class="row">
				<%= data_text('VI - Evaluación Nutricional', con.evaluacion,'col-md-12') %>
			</div>
			<div class="row">
				<%= data_text('VII - Indicaciones', con.indicaciones,'col-md-12') %>
			</div>
		</div>
	<% end %>
</div>
