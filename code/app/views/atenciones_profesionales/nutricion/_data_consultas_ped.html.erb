<ul class="nav nav-tabs">
	<% consultas_ped.each do |c| %>
		<li><a href="#con-ped-<%=c.id%>"><%=date(c.fecha)%></a></li>
	<% end %>
</ul>

<div class="tabs-content">
	<% consultas_ped.each do |con| %>
		<div id="con-ped-<%=con.id%>">
			<div class="row">
				<%= data('Profesional de la Salud', con.doctor_full_name,'col-md-9') %>
				<%= data('Fecha', date(con.fecha),'col-md-3') %>
			</div>

			<div class="row">
				<%= data('I - Encargado', con.encargado,'col-md-12') %>
			</div>

			<ul class="nav nav-tabs">
				<li><a href="#con-ped-<%=con.id%>-val-des">II - Valoración del Desarrollo</a></li>
				<li><a href="#con-ped-<%=con.id%>-ali-act">III - Alimentación Actual</a></li>
				<li><a href="#con-ped-<%=con.id%>-sig-sin">IV - Signos y/o Síntomas</a></li>
				<li><a href="#con-ped-<%=con.id%>-dat-ant">V - Datos Antropométricos</a></li>
			</ul>
			<div class="tabs-content">
				<div id="con-ped-<%=con.id%>-val-des">
					<div class="row">
						<%= data('Sostén Cefálico', con.sosten_cefalico,'col-md-12') %>
					</div>
					<div class="row">
						<%= data('Se sentó a los', con.sento,'col-md-4') %>
						<%= data('Se paró a los', con.paro,'col-md-4') %>
						<%= data('Caminó a los', con.camino,'col-md-4') %>
					</div>
					<div class="row">
						<%= data('¿Busca Sonido?', con.busca_sonido,'col-md-4') %>
						<%= data('¿Emite Sonido?', con.emite_sonido,'col-md-4') %>
						<%= data('¿Rie - Llora?', con.rie_llora,'col-md-4') %>
					</div>
					<div class="row">
						<%= data('¿Sigue la luz u objetos coloridos?', con.sigue_luz,'col-md-5') %>
						<%= data('¿Mastica - Deglute?', con.mastica_deglute,'col-md-7') %>
					</div>
					<div class="row">
						<%= data('Habilidades presentes y/o ausentes para la edad', con.habilidades,'col-md-12') %>
					</div>
					<div class="row">
						<%= data_text('Otros', con.otros,'col-md-12') %>
					</div>
				</div>

				<div id="con-ped-<%=con.id%>-ali-act">
					<div class="row">
						<%= data('Desayuno', con.desayuno,'col-md-12') %>
					</div>
					<div class="row">
						<%= data('Media Mañana', con.media_manana,'col-md-12') %>
					</div>
					<div class="row">
						<%= data('Almuerzo', con.almuerzo,'col-md-12') %>
					</div>
					<div class="row">
						<%= data('Merienda', con.merienda,'col-md-12') %>
					</div>
					<div class="row">
						<%= data('Cena', con.cena,'col-md-12') %>
					</div>
				</div>

				<div id="con-ped-<%=con.id%>-sig-sin">
					<div class="row">
						<%= data('Diarrea', con.diarrea,'col-md-4') %>
						<%= data('Vómitos', con.vomitos,'col-md-4') %>
						<%= data('Fiebre', con.fiebre,'col-md-4') %>
					</div>
					<div class="row">
						<%= data('Problemas Respiratorios', con.problemas_respiratorios,'col-md-6') %>
						<%= data('Distención abdominal', con.distension_abdominal,'col-md-6') %>
					</div>
					<div class="row">
						<%= data('Constipación', con.constipacion,'col-md-4') %>
						<%= data('Orina', con.orina,'col-md-4') %>
						<%= data('Sudor', con.sudor,'col-md-4') %>
					</div>
					<div class="row">
						<%= data('Otros', con.otros2,'col-md-12') %>
					</div>
				</div>

				<div id="con-ped-<%=con.id%>-dat-ant">
					<div class="row">
						<%= data('Talla', con.talla,'col-md-6') %>
						<%= data('Peso', con.peso,'col-md-6') %>
					</div>
					<div class="row">
						<%= data('PC', con.pc,'col-md-4') %>
						<%= data('IMC', con.imc,'col-md-4') %>
						<%= data('CM', con.cm,'col-md-4') %>
