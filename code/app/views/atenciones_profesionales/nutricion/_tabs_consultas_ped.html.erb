<!--  Renderiza un tab para nueva consulta, si el turno esta pendiente
      Renderiza los datos de cada consulta pediÃ¡trica dentro de tabs
 -->
<ul class="nav nav-tabs">
	<% if turno.pendiente? %>
		<li><a href="#con-ped-new"><span class="fa fa-plus"></span> Nueva Consulta</a></li>
	<% end %>
	<% consultas_ped.each do |c| %>
		<li><a href="#con-ped-<%=c.id%>"><%=date(c.fecha)%></a></li>
	<% end %>
</ul>

<div class="tabs-content">
	<% if turno.pendiente? %>
		<div id="con-ped-new">
			<%=render 'atenciones_profesionales/nutricion/new_consulta_ped', turno: turno, ficha_ped_id: ficha_ped_id%>
		</div>
	<% end %>
	<% consultas_ped.each do |consulta_ped| %>
		<div id="con-ped-<%=consulta_ped.id%>">
			<%=render 'atenciones_profesionales/nutricion/data_consulta_ped',consulta_ped: consulta_ped%>
		</div>
	<% end %>
</div>

