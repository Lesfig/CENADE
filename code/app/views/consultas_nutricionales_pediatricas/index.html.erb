<div class= "content2">

 <div id="advanced-search" style = 'display:none;' class="advanced-search-con-sidebar">
  <div class="row">
      <%= search_form_for @search, url: search_consultas_nutricionales_pediatricas_path, method: :post, remote: true, class: 'form-filtros' do |f| %>
         <div class="row">

          <%= FormBuilder::text_field_v(f, :paciente_persona_nombre_or_paciente_persona_apellido_or_paciente_persona_ci_cont, {col_class: 'col-md-3', label_text: 'Paciente', input_class: '',  placeholder: "Nombre, Apellido o CI"})%>

          <%= FormBuilder::text_field_v(f, :doctor_persona_nombre_or_doctor_persona_apellido_cont, {col_class: 'col-md-3', label_text: 'Prof. de la Salud', input_class: '', placeholder: "Nombre o Apellido"})%>

          <%= FormBuilder::text_field_v(f, :fecha_gteq, {col_class: 'col-md-2', label_text: 'Fecha', input_class: 'datepicker',max_length: Domain::FECHA})%>

          <%= FormBuilder::text_field_v(f, :fecha_lteq, {col_class: 'col-md-2', label_text: 'Fecha', input_class: 'datepicker',max_length: Domain::FECHA})%>

         <div class= "input-group pull-right" style = 'margin-top: 25px;'>
            <%= f.submit 'Filtrar', class: 'btn btn-custom '%>
            <%= f.submit 'Limpiar Campos', type: 'reset', class: 'btn btn-link'%>
         </div>
        </div>
      <% end %>
  </div>
</div>
  <div id="list" class="list-con-sidebar">

