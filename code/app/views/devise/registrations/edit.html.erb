<% @submenu_layout = 'layouts/submenu_configuracion' %>
<% @sidebar_layout = 'layouts/sidebar_perfil_usuario' %>
<div class= "form-content">  
  <div class="page-title" style = "left:200px;">
    Perfil de Usuario      
  </div>
  
  
  
  
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true, :method => :put,class: 'medium-form' }) do |f| %>
  <h4>Datos de Usuario</h4><hr>
  <div class="row">
    
    <%= FormBuilder::text_field_v(f, :username, 
      input_class: 'required', 
      max_length: Domain::USERNAME, 
      autofocus: true,
      col_class: 'col-md-6',
      label_text: '* Usuario') %>
      <div class= 'col-md-6'>
        <%= image_tag(current_user.profile_foto_url.to_s, :width => 100, :height => 100) %>
        <%= f.file_field :profile_foto %>
      </div></br>
    </div>
    <div class="row">
      <%= FormBuilder::text_field_v(f, :password, 
        input_class: 'required clear', 
        max_length: Domain::CONTRASEÑA,
        col_class: 'col-md-6',
        label_text: '* Contraseña') %>

      <%= FormBuilder::text_field_v(f, :password_confirmation, 
        input_class: 'required clear', 
        max_length: Domain::CONTRASEÑA,
        col_class: 'col-md-6',
        label_text: '* Confirmar Contraseña') %>        
      </div>
      <h4>Datos de Contacto</h4><hr>
      <div class="row">
        <div class="form-group col-md-12">
          <label class="control-label titulos-campos" for="user_username">* Direccion</label>
          <input class="form-control required clear usuario-apellido" placeholder=""  maxlength="30" type="text" >
        </div>
      </div>
      <div class="row">


        <div class="form-group col-md-5">
          <label class="control-label titulos-campos" for="user_username">* Telefono</label>
          <input class="form-control required clear usuario-cargo" placeholder=""  maxlength="100" type="text"  >
        </div>

        <div class="form-group col-md-7">
          <label class="control-label titulos-campos" for="user_username">* Email</label>
          <input class="form-control required clear usuario-email" placeholder=""  maxlength="50" type="text"  >
        </div>
      </div>
      
      
      <div class="form-button">   
        <%= f.submit 'Guardar cambios', class: 'btn btn-custom'%>
      </div>
      <% end %>
      
    </div>




