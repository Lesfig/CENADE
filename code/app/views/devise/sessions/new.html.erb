  <div class="container">

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class: 'form-signin'}) do |f| %>
    <div class="form-signin-heading">
    <%= image_tag(Configuracion.first.empresa_logo, size: "100x100", class:'img-polaroid img-' ,style:"border-radius:50%;") %>
  </div>
    <h2 class= "form-signin-heading"><%= t('.sign_in', :default => "Sign in") %></h2>

    <!-- <%= devise_error_messages! %> -->
    <%= render 'layouts/messages' %>

    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
        	<%= f.text_field :username, placeholder: 'Nombre de usuario', class: 'form-control input-lg', autofocus: true, maxLength: Domain::NOMBRE %>
      </div>
      <div id="username-error"></div>

      <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
        	<%= f.password_field :password, placeholder: 'Contraseña', class: 'form-control input-lg passwordLength passwordCheck', maxLength: Domain::CONTRASEÑA %>
      </div>
      <div id="password-error"></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit t('.sign_in', :default => "Sign in"), :class => 'btn btn-custom btn-lg btn-block' %></div>
  <% end %>

  </div>
