<div class="page-title page-title-con-sidebar">
	Ficha de <%= ficha.paciente_persona_full_name%>

	<div class="tool">
		<%= link_to '<i class="fa fa-list data-toggle="tooltip" title="Lista de Fichas"></i> '.html_safe, fichas_pediatricas_path %>

		<%= link_to '<i class="fa fa-plus-square" data-toggle="tooltip" title="Nueva Ficha"></i> '.html_safe, new_ficha_pediatrica_path, remote: true %>

		<%= link_to '<i class="fa fa-edit" data-toggle="tooltip" title="Editar Ficha"></i> '.html_safe, edit_ficha_pediatrica_path(ficha), remote:true%>

		<%= link_to '<i class="fa fa-print" data-toggle="tooltip" title="Imprimir Ficha"></i> '.html_safe, fichas_pediatricas_print_ficha_path(ficha_id: ficha.id, :format => :pdf), target: '_blank'%>

	</div>

</div>

<div class="form-content2">

	<%= simple_form_for ficha, html: {class: 'form-ficha2'}, remote: true do |fich|%>


	<h4 class="titulo-ficha">FICHA DE PEDIATR√çA</h4>

	<div class="row">

		<h4 class="col-md-9"><strong>Profesional de la Salud: </strong> <%= ficha.doctor.abr_profesion+' '+ficha.doctor.persona_full_name%> </h4>

  		<h4 class="col-md-3"><strong> Fecha: </strong> <%= Formatter.format_date(ficha.fecha)%> </h4>
  	</div>

	<%= render 'compartido/fic_cli_neu_ped/form_paciente', paciente: paciente %>

	<%= render 'compartido/fic_cli_neu_ped/form_show_fields', fich: fich %>

	<% end %>
</div>

<script type="text/javascript">

	<% if !flash.notice.blank? %>
		var n = noty({text: '<%=notice%>', type: 'success'});
	<% end %>

	<% if !flash.alert.blank?%>
		var n = noty({text: '<%=alert%>', type: 'error'});
	<% end %>

</script>